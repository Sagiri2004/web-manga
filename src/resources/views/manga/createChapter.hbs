<style>
    body {
        background-color: #222; /* Dark background for the whole page */
        color: #fff; /* Light text */
    }

    .container_body {
        background-color: #333; /* Darker background for the container */
        padding: 20px;
        border-radius: 10px;
    }

    .form-group label {
        color: #ccc; /* Lighter text for labels */
    }

    h1 {
        color: #007bff; /* Blue heading */
    }

    .form-control, .form-control-file {
        background-color: #444; /* Dark background for form controls */
        color: #fff; /* Light text for form controls */
        border: 1px solid #555; /* Darker border for form controls */
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-success:hover {
        background-color: #218838;
        border-color: #1e7e34;
    }
</style>


<body>
  <div class="container container_body mt-5 color-white">
    <h1>Create Chapters</h1>
    <form action="/manga/create/{{mangaId}}" method="post" enctype="multipart/form-data">
      <div id="chapters">
        <div class="chapter mb-4">
          <div class="form-group">
            <label for="chapter_name_1">Chapter Name</label>
            <input type="text" class="form-control" id="chapter_name_1" name="chapter[0][name]" required>
          </div>
          <div class="form-group">
            <label for="chapter_number_1">Chapter Number</label>
            <input type="number" class="form-control" id="chapter_number_1" name="chapter[0][number]" required>
          </div>
          <div class="form-group">
            <label for="chapter_image_1">Chapter Image</label>
            <input type="file" class="form-control-file" id="chapter_image_1" name="chapter_image_data" required>
          </div>
        </div>
      </div>
      {{!-- <button type="button" id="add-chapter" class="btn btn-primary mb-3">Add Chapter</button> --}}
      <button type="submit" class="btn btn-success">Submit</button>
    </form>
  </div>

  <script>
    let chapterCount = 1;

    document.getElementById('add-chapter').addEventListener('click', () => {
      chapterCount++;
      const chaptersDiv = document.getElementById('chapters');
      const newChapter = document.createElement('div');
      newChapter.classList.add('chapter', 'mb-4');
      newChapter.innerHTML = `
        <div class="form-group">
          <label for="chapter_name_${chapterCount}">Chapter Name</label>
          <input type="text" class="form-control" id="chapter_name_${chapterCount}" name="chapter[${chapterCount - 1}][name]" required>
        </div>
        <div class="form-group">
          <label for="chapter_number_${chapterCount}">Chapter Number</label>
          <input type="number" class="form-control" id="chapter_number_${chapterCount}" name="chapter[${chapterCount - 1}][number]" required>
        </div>
        <div class="form-group">
          <label for="chapter_image_${chapterCount}">Chapter Image</label>
          <input type="file" class="form-control-file" id="chapter_image_${chapterCount}" name="chapter_image_data" required>
        </div>
      `;
      chaptersDiv.appendChild(newChapter);
    });
  </script>

