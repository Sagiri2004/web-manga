    <style>
        .navbar {
            background-color: #192c39;
            font-family: Arial, sans-serif;
        }

        .navbar-brand {
            color: #fff;
            font-size: 1.5em;
        }

        .nav-item {
            margin-left: 10px;
        }

        .nav-link {
            color: #fff;
            transition: color 0.3s ease;
        }

        .nav-link:hover {
            color: #ddd;
        }

        .user-avatar {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            margin-right: 8px;
        }

        .badge-danger {
            background-color: #dc3545;
            position: absolute;
            top: -5px;
            right: -5px;
            font-size: 10px;
            border-radius: 50%;
            padding: 5px;
        }

        .dropdown-menu {
            background-color: #fff;
            color: #333;
        }

        .dropdown-item {
            color: #333;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .dropdown-item:hover {
            background-color: #ddd;
            color: #000;
        }

        .form-control {
            margin-right: 10px;
        }

        .form-control:focus {
            border-color: #007bff;
            outline: none;
        }

        .btn-outline-success {
            color: #fff;
            border-color: #28a745;
        }

        .btn-outline-success:hover {
            background-color: #28a745;
            border-color: #218838;
        }

        .navbar-toggler {
            border-color: #fff;
        }

        .navbar-toggler-icon {
            color: #fff;
        }
    </style>
    <!-- Font Awesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">Zutomayo</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    {{#if myUser}}
                        <li class="nav-item">
                            <form class="form-inline my-2 my-lg-0" action="/search" method="get">
                                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="query" required>
                                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                            </form>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <img src="{{myUser.image}}" alt="" class="user-avatar" />
                                {{myUser.name}}
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/user/my-created-manga">My Manga</a>
                                <a class="dropdown-item" href="#" onclick="document.getElementById('logoutForm').submit();">Logout</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-bell"></i>
                                {{#if notifications.length}}
                                    <span class="badge badge-danger">{{notifications.length}}</span>
                                {{/if}}
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                                {{#if notifications.length}}
                                    {{#each notifications}}
                                        <a class="dropdown-item" href="#" onclick="markAsRead('{{this.id}}', '{{this.notification_id}}')">{{this.message}}</a>
                                        <form id="form-{{this.id}}" action="/user/{{this.notification_id}}?_method=PUT" method="post" style="display: none;">
                                            <input type="hidden" name="_method" value="PUT">
                                        </form>
                                    {{/each}}
                                {{else}}
                                    <a class="dropdown-item" href="#">No notifications</a>
                                {{/if}}
                            </div>
                        </li>
                    {{else}}
                        <li class="nav-item">
                            <form class="form-inline my-2 my-lg-0" action="/search" method="get">
                                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="query" required>
                                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                            </form>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/login">Login</a>
                        </li>
                    {{/if}}
                </ul>
            </div>
        </div>

        <form id="logoutForm" action="/auth/logout" method="post" style="display: none;"></form>
    </nav>

    <script>
        function markAsRead(id, notificationId) {
            document.getElementById('form-' + id).submit();
        }
    </script>
</body>