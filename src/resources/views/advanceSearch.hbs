  <style>
    body {
      background-color: #f8f9fa;
    }

    .form-check {
      margin-bottom: 10px;
    }
    .form-check-label {
      margin-left: 5px;
    }
  </style>

  <div class="container mt-5">
    <form action="/advanced_search" method="POST">
    <div class="form-group">
        <label>Genres</label>
        <div class="row">
            {{#each genres}}
                <div class="col-sm-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="genres[]" value="{{this.id}}" id="genre-{{@index}}">
                        <label class="form-check-label" for="genre-{{@index}}">
                            {{this.name}}
                        </label>
                    </div>
                </div>
            {{/each}}
        </div>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Search</button>
    </form>
  </div>